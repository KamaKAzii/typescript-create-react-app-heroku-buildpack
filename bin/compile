#!/bin/bash

BUILD_DIR=$1

herokuEcho () { 
  echo "-----> $1"
}

herokuEcho "============================================"
herokuEcho "============================================"
herokuEcho "Lego Create React App + Typescript stack! 🚀"
herokuEcho "============================================"
herokuEcho "============================================"

# ====================================
# Let's get NodeJS goin'! 🍢
# ====================================

herokuEcho "About to get NodeJS 🍢"

relativeNodePath="bin/node"
absoluteNodePath="${BUILD_DIR}/${relativeNodePath}"
mkdir -p $absoluteNodePath
curl -s https://nodejs.org/dist/v12.18.0/node-v12.18.0-linux-x64.tar.xz | tar --strip-components=1 -xJf - -C $absoluteNodePath

herokuEcho "Successfully fetched NodeJS 🍢 🌈"

echo "$absoluteNodePath"

PATH="$absoluteNodePath:$PATH"
herokuEcho "Successfully added node to PATH 🛣 🍢 🌈"
herokuEcho "Checking node works from PATH 🛣..."
herokuEcho "NodeJS version: $(node -v)"
herokuEcho "Yay! Good work Buildpack! Go you! ⭐️⭐️⭐️⭐️⭐️"

# ====================================
# Get the PATH setup for the dynos! 🧨
# ====================================

herokuEcho "Time to add to the 🐌's path..."
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"\$HOME/$relativeNodePath:\$PATH\"" > $BUILD_DIR/.profile.d/nodejs.sh