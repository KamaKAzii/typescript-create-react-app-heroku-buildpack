#!/bin/bash

BUILD_DIR=$1

herokuEcho () { 
  echo "-----> $1"
}

herokuEcho "About to get NodeJS ğŸ¢"

nodeDir=$BUILD_DIR/bin/node
mkdir -p $nodeDir
curl -s https://nodejs.org/dist/v12.18.0/node-v12.18.0-linux-x64.tar.xz | tar --strip-components=1 -xsvJf - -C $nodeDir

herokuEcho "Successfully fetched and 
herokuEcho $($nodeDir/bin/node -v)

herokuEcho "Current path ğŸ›£ "
herokuEcho $PATH
herokuEcho "Adding NodeJS ğŸ¢ to PATH ğŸ›£... "
PATH="$nodeDir:$PATH"
herokuEcho $PATH
herokuEcho "Checking node works from PATH ğŸ›£... "
herokuEcho $(node -v)
