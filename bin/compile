#!/bin/bash

BUILD_DIR=$1

herokuEcho () { 
  echo "-----> $1"
}

herokuEcho "About to get NodeJS üç¢"

nodeDir=$BUILD_DIR/bin/node
mkdir -p $nodeDir
curl -s https://nodejs.org/dist/v12.18.0/node-v12.18.0-linux-x64.tar.xz | tar --strip-components=1 -xvf - -C $nodeDir
herokuEcho $($nodeDir/bin/node -v)