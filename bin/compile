#!/bin/bash

BUILD_DIR=$1

herokuEcho () { 
  echo "-----> $1"
}

herokuEcho "About to get NodeJS ğŸ¢"

nodeBaseDir=$BUILD_DIR/bin/node
mkdir -p $nodeBaseDir
curl -s https://nodejs.org/dist/v12.18.0/node-v12.18.0-linux-x64.tar.xz | tar --strip-components=1 -xJf - -C $nodeBaseDir
nodePath="$nodeBaseDir/bin/node"

herokuEcho "Successfully fetched NodeJS ğŸ¢ ğŸŒˆ"
herokuEcho $($nodePath -v)

herokuEcho "Current path ğŸ›£ "
herokuEcho $PATH
herokuEcho "Adding NodeJS ğŸ¢ to PATH ğŸ›£... "
PATH="$nodePath:$PATH"
herokuEcho $PATH
herokuEcho "Checking node works from PATH ğŸ›£... "
herokuEcho $(node -v)
herokuEcho "Yay"